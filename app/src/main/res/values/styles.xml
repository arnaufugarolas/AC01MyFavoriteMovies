<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Layouts -->
    <style name="Layout00">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="LayoutMM">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="MovieDetailsMain" parent="LayoutMM">
        <item name="android:background">@color/oxford_blue</item>
    </style>

    <style name="LinearLayoutMMH">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LayoutWW">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LayoutMW">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearLayoutMWV" parent="LayoutMW">
        <item name="android:orientation">vertical</item>
    </style>
    <!-- Styles -->
    <style name="Column" parent="LayoutWW">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Row" parent="LayoutWW">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="MovieBasicText" parent="Layout00">
        <item name="android:textColor">@color/tea_green</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:gravity">center_vertical|start</item>
        <item name="android:lines">1</item>
    </style>

    <style name="MovieTitle" parent="MovieBasicText">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MovieItemRatingText" parent="MovieBasicText">
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="MovieBasicImage" parent="Layout00">
        <item name="android:scaleType">fitCenter</item>
        <item name="android:adjustViewBounds">true</item>
    </style>

    <style name="MovieItemError" parent="MovieBasicImage">
        <item name="android:src">@drawable/baseline_clear_24</item>
        <item name="android:visibility">gone</item>
        <item name="android:contentDescription">@string/error</item>
    </style>

    <style name="Loading" parent="Layout00">
        <item name="android:visibility">gone</item>
    </style>

    <style name="MovieReadMore" parent="MovieBasicImage">
        <item name="android:contentDescription">@string/read_more</item>
        <item name="android:src">@drawable/sharp_read_more</item>
    </style>

    <style name="MovieEditRating" parent="MovieBasicImage">
        <item name="android:contentDescription">@string/edit_user_rating</item>
        <item name="android:src">@drawable/sharp_edit_note</item>
    </style>

    <style name="MovieFavorite" parent="MovieBasicImage">
        <item name="android:contentDescription">@string/favorite</item>
        <item name="android:src">@drawable/sharp_star_outline</item>
    </style>

    <style name="MovieDelete" parent="MovieBasicImage">
        <item name="android:contentDescription">@string/delete_movie</item>
        <item name="android:src">@drawable/outline_delete_24</item>
    </style>

    <style name="MoviePoster" parent="MovieBasicImage">
        <item name="android:contentDescription">@string/movie_poster</item>
    </style>

    <style name="MovieItemMain">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/oxford_blue</item>
        <item name="android:layout_height">350dp</item>
    </style>

    <style name="TextViewTitleDialog" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>

    <style name="EditTextDialog" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:importantForAutofill">no</item>
        <item name="android:minHeight">50dp</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:lines">1</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ImageViewRetry">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:contentDescription">@string/error</item>
        <item name="android:src">@drawable/baseline_sync_problem_24</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="MovieDetailsText">
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:textColor">@color/tea_green</item>
        <item name="android:autoSizeTextType">uniform</item>
    </style>

    <style name="MovieDetailsLabel" parent="MovieDetailsText">
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:lines">1</item>
    </style>

    <style name="MovieDetailsValue" parent="MovieDetailsText">
        <item name="android:layout_marginStart">1dp</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">end|center_vertical</item>
    </style>

    <style name="MovieDetailsOverview" parent="MovieDetailsText">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:justificationMode">inter_word</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:breakStrategy">simple</item>
    </style>

    <style name="SearchMoviesImage" parent="MovieBasicImage">
        <item name="android:contentDescription">Search</item>
        <item name="android:src">@drawable/baseline_search_24</item>
    </style>

    <style name="EditTextQuery">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">75dp</item>
        <item name="android:inputType">text</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:textColorHint">@color/tea_green</item>
        <item name="android:textColor">@color/tea_green</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:autofillHints">false</item>
    </style>

</resources>
